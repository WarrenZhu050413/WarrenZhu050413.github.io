---
layout: null
---
[
  {% for post in site.posts %}
  {
    "type": "post",
    "title": {{ post.title | jsonify }},
    "url": {{ site.baseurl | append: post.url | jsonify }},
    "date": {{ post.date | date: "%B %-d, %Y" | jsonify }},
    "content": {{ post.content | strip_html | truncatewords: 50 | jsonify }}
  }{% unless forloop.last and site.sentences.size == 0 %},{% endunless %}
  {% endfor %}
  {% for sentence in site.sentences %}
  {
    "type": "sentence",
    "title": {{ sentence.title | jsonify }},
    "url": {{ site.baseurl | append: sentence.url | jsonify }},
    "date": {{ sentence.date | date: "%B %-d, %Y" | jsonify }},
    "content": {{ sentence.content | strip_html | truncatewords: 30 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
